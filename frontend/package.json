{
  "name": "angular4-nodejs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "clean": "rm -rf public/js/app src/*.js src/*/*.js src/*/*/*.js public/aot",
    "build": "npm run sed:local && npm run clean && webpack --config webpack.config.dev.js",
    "build:aot": "npm run clean && ngc -p tsconfig.aot.json",
    "prod:rollup": "npm run build:aot && rollup -c",
    "prod": "npm run build:aot && webpack --config webpack.config.prod.js",
    "source-map": "source-map-explorer public/js/app/app.bundle.js",
    "watch:rollup": "rollup -c -w",
    "watch:webpack": "npm run clean && webpack --config webpack.config.dev.js --progress --profile --watch",
    "sed:mongo": "sed 's;https://localhost:3000/;https://backend:3000/;g' -i src/*/*.service.ts",
    "sed:local": "sed 's;https://localhost/;https://localhost:3000/;g' -i src/*/*.service.ts",
    "deploy:clean": "rm -rf ../deploy/nginx/frontend/*",
    "deploy:copy": "cp -rf public/* ../deploy/nginx/frontend/",
    "deploy": "npm run sed:mongo && npm run prod && npm run deploy:clean && npm run deploy:copy",
    "local": "npm run sed:local && npm run prod"
  },
  "dependencies": {
    "@angular/animations": "^4.2.3",
    "@angular/common": "^4.2.3",
    "@angular/compiler": "^4.2.3",
    "@angular/core": "^4.2.3",
    "@angular/forms": "^4.2.3",
    "@angular/http": "^4.2.3",
    "@angular/platform-browser": "^4.2.3",
    "@angular/router": "^4.2.3",
    "core-js": "^2.4.1",
    "rxjs": "^5.4.1",
    "zone.js": "^0.8.12",
    "@angular/compiler-cli": "^4.2.3",
    "@angular/platform-browser-dynamic": "^4.2.3",
    "@angular/platform-server": "^4.2.3",
    "angular-router-loader": "^0.6.0",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.1.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.17.2",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.3",
    "html-loader": "^0.4.5",
    "http2": "^3.3.6",
    "jsonwebtoken": "^7.4.1",
    "mongoose": "^4.10.7",
    "mongoose-unique-validator": "^1.0.5",
    "morgan": "^1.8.2",
    "raw-loader": "^0.5.1",
    "router": "^1.3.1",
    "serve-favicon": "^2.4.3",
    "typescript": "^2.3.4",
    "webpack": "^3.0.0",
    "webpack-merge": "^4.1.0"
  },
  "devDependencies": {
    "@ngtools/webpack": "^1.4.2",
    "compression-webpack-plugin": "^0.4.0",
    "rollup": "^0.43.0",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "rollup-watch": "^4.0.0"
  }
}
