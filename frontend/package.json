{
  "name": "frontend",
  "version": "1.0.0",
  "description": "Frontend for the HAF app in Angular",
  "scripts": {
    "prestart": "npm run local",
    "start": "nodemon ./bin/www",
    "clean:src": "rm -rf src/index.html src/*.js src/*/*.js src/*/*/*.js src/main.aot.ts",
    "clean:public": "rm -rf public/aot public/js public/app public/index.html public/*.js",
    "clean": "npm run clean:src && npm run clean:public",
    "prebuild": "npm run clean",
    "build": "tsc",
    "build:watch": "tsc -w",
    "build:aot": "npm run clean && npm run cp:aot && ngc -p tsconfig.aot.json",
    "prod": "npm run build:aot && webpack --config webpack/webpack.config.prod.js",
    "source-map": "source-map-explorer public/js/app/app.bundle.js",
    "watch:webpack": "npm run clean && webpack --config webpack/webpack.config.dev.js --progress --profile --watch",
    "sed:mongo": "sed 's;http://localhost:3000/;http://backend:3000/;g' -i src/*/*.service.ts",
    "sed:local": "sed 's;http://backend:3000/;http://localhost:3000/;g' -i src/*/*.service.ts",
    "deploy:clean": "rm -rf ../deploy/nginx/frontend/*",
    "deploy:copy": "cp -rf public/* ../deploy/nginx/frontend/",
    "deploy": "npm run sed:mongo && npm run prod && npm run deploy:clean && npm run deploy:copy",
    "local": "npm run sed:local && npm run prod",
    "cp:systemjs": "cp systemjs/* public/",
    "cp:aot": "cp aot_files/main.aot.ts src/ && cp aot_files/index.html public/",
    "pretest": "npm run build && npm run cp:systemjs",
    "test": "concurrently \"npm run build:watch\" \"karma start karma.conf.js\"",
    "serve": "lite-server -c=bs-config.json",
    "serve:e2e": "lite-server -c=bs-config.e2e.json",
    "presystemjs": "npm run build && npm run cp:systemjs",
    "systemjs": "concurrently \"npm run build:watch\" \"npm run serve\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@angular/common": "^4.3.6",
    "@angular/core": "^4.3.6",
    "@angular/forms": "^4.3.6",
    "@angular/http": "^4.3.6",
    "@angular/platform-browser": "^4.3.6",
    "@angular/platform-browser-dynamic": "^4.3.6",
    "@angular/router": "^4.3.6",
    "@types/jasmine": "^2.5.54",
    "@types/node": "^8.0.26",
    "core-js": "^2.5.1",
    "html-loader": "^0.5.1",
    "raw-loader": "^0.5.1",
    "rxjs": "^5.4.3",
    "serve-favicon": "^2.4.3",
    "zone.js": "^0.8.17"
  },
  "devDependencies": {
    "@angular/compiler": "^4.3.6",
    "@angular/compiler-cli": "^4.3.6",
    "@ngtools/webpack": "^1.6.2",
    "compression-webpack-plugin": "^1.0.0",
    "concurrently": "^3.5.0",
    "express": "^4.15.4",
    "jasmine-core": "^2.8.0",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lite-server": "^2.3.0",
    "systemjs": "^0.20.18",
    "typescript": "^2.5.2",
    "webpack": "^3.5.5",
    "webpack-merge": "^4.1.0"
  }
}
