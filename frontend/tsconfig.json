{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "public/app"
  },
  "files": [
    "src/app.module.ts",
    "src/+auth/authentication.module.ts",
    "src/+auth/+signin/signin.module.ts",
    "src/+auth/+signup/signup.module.ts",
    "src/+auth/+logout/logout.module.ts",
    "src/+statistics/statistics.module.ts",
    "src/+statistics/+stats-details/stats-details.module.ts"
  ],

  "include": [
    "src/**/*"
  ]
}
